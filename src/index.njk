---

title: 'Lucas Gomes - Portfolio'
layout: 'base.njk'

---

<!-- !HERO SECTION -->
<section class="section hero" id="hero">
    <div class="container">
        <div class="title main-title">
            Crea<span class="inline-image sparkles"></span>tive
            <br>
            Full Stack
            <br>
            Develope<span class="sparkles-alt">r</span>
        </div>
        <div class="hero-group-buttons">
            <a href="#portfolio">
                <button class="button button-fill">Projects</button>
            </a>
            <a href="#contact">
                <button class="button button-fill">Get in Touch!</button>
            </a>
        </div>
    </div>
</section>
<!-- !ABOUT SECTION -->
<section class="section about">
    <div class="container">
        <div class="section-title-container" id="about">
            <h2 class="title section-title">About</h2>
            <div class="section-subtitle-container">
                <span class="subtitle-icon sparkles">
                    <i class="bx bx-male"></i>
                </span>
                <h5 class="title section-subtitle">me</h5>
            </div>
        </div>
        <div class="section-description d-grid">
            <div class="scroll-reveal-left">
                <p class="description">
                    Hi! My name is
                    <strong>Lucas Gomes</strong>.
                    <br>I'm a
                    <strong>Full Stack Developer</strong> with a passion for creating
                    <strong>user-friendly</strong> web applications.
                    <br>Developing and creating beautiful interactive user interfaces is my
                    <strong>passion</strong>!!
                    </span>
            </p>
        </div>
        <div class="scroll-reveal-right">
            <div class="description-image sparkles">
                <img src="./assets/images/about.svg" alt="about-me-image">
            </div>
        </div>
    </div>
    <div class="tech-stack d-grid">
        <div class="tech-stack-item" data-tooltip="HTML5">
            <i class="bx bxl-html5"></i>
        </div>
        <div class="tech-stack-item" data-tooltip="CSS3">
            <i class="bx bxl-css3"></i>
        </div>
        <div class="tech-stack-item" data-tooltip="JAVASCRIPT">
            <i class="bx bxl-javascript"></i>
        </div>
        <div class="tech-stack-item" data-tooltip="REACT">
            <i class="bx bxl-react"></i>
        </div>
        <div class="tech-stack-item" data-tooltip="NODEJS">
            <i class='bx bxl-nodejs'></i>
        </div>
        <div class="tech-stack-item" data-tooltip="MONGO">
            <i class='bx bxl-mongodb'></i>
        </div>
        <div class="tech-stack-item" data-tooltip="GIT">
            <i class='bx bxl-git'></i>
        </div>
    </div>
</div>
</section>
<!-- !PORTFOLIO SECTION -->
<section class="section portfolio">
<div class="container">

    <div class="section-title-container" id="portfolio">
        <h2 class="title section-title">Portfolio</h2>
        <div class="section-subtitle-container">
            <span class="subtitle-icon sparkles">
                <i class="bx bx-code-alt"></i>
            </span>
            <h5 class="title section-subtitle">Projects</h5>
        </div>
    </div>

    <div class="portfolio-cards d-grid" aria-haspopup="dialog">

        {% for entry in collections.projects %}
            <div class="portfolio-card open-modal" data-target="modal">
                <div class="card-image">
                    <img src="{{entry.data.image}}" alt="project-preview-image">
                </div>
                <div class="card-heading">
                    <h5 class="card-title">{{entry.data.name}}</h5>
                    <span class="card-subtitle">{{entry.data.subtitle}}</span>
                </div>

            </div>
            <div class="modal" id="modal">
                <div class="overlay" data-target='modal'></div>
                <div class="modal-contents">
                    <div class="modal-close" title="Close" data-target='modal'>
                        <i class='bx bx-x'></i>
                    </div>

                    <h3 class="modal-title">{{entry.data.name}}</h3>
                    <div class="modal-description container">
                        <p>
                            {{entry.data.description}}
                        </p>
                        <p></p>

                    </div>
                    <div class="modal-btn-group">
                        <a href="{{entry.data.live}}" target="_blank" class="button button-fill" target="_blank">
                            View Live
                    </a>

                        <a href="{{entry.data.github}}" target="_blank" class=" button button-fill" target="_blank">
                            GitHub
                    </a>
                    </div>
                </div>
            </div>
        {% endfor %}
        <div class="portfolio-card portfolio-card-6 large-button-container">
            <a href="https://github.com/Lucaas27?tab=repositories" target="_blank" class="large-button button-fill">
                    View
                    <br>All
                </a>
        </div>

    </div>
</div>
</section>

<!-- !CONTACT SECTION -->
<section class="section contact">

<div class="container">
    <div class="section-title-container" id="contact">
        <h2 class="title section-title">Get in</h2>
        <div class="section-subtitle-container">
            <span class="subtitle-icon sparkles">
                <i class="bx bx-conversation"></i>
            </span>
            <h5 class="title section-subtitle">touch</h5>
        </div>
    </div>
    <div class="section-description d-grid">
        <div class="scroll-reveal-left">
            <p class="description">
                    If <strong>you</strong> would like to work <strong>together</strong>
                    on a <strong>project</strong>, please fill out the <strong>form</strong> below.
                    I can't wait to turn your <strong>ideas</strong> into <strong>reality</strong>!
                </p>
        </div>
        <div class="scroll-reveal-right">
            <div class="description-image sparkles">
                <img src="./assets/images/contact.svg" alt="contact-me-image">
            </div>
        </div>
    </div>
    <div class="form-container">
        <form 
        method="POST" 
        class="contact-form" 
        data-netlify=true 
        name="contact" 
        netlify-honeypot="bot-field">
            <div class="input-group">
                <p class="hidden">
                    <label>
                    Don’t fill this out if you’re human: <input name="bot-field"/>
                    </label>
                </p>
                <div class="input">
                    <input type="text" id="name" name="name" required>
                    <label for="name" class="input-label">Name<span class="required-field">*</span></label>
                </div>

                <div class="input">
                    <input type="text" id="email" name="email" required>
                    <label for="email" class="input-label">Email<span class="required-field">*</span></label>
                </div>
            </div>

            <div class="input">
                <textarea name="message" id="message" cols="30" rows="10" name="message"></textarea>
                <label for="message" class="input-label">Message<span class="required-field">*</span></label>
            </div>

            <button type="submit" class="button form-button button-fill">Send Message</button>
        </form>
    </div>

</div>

</section>